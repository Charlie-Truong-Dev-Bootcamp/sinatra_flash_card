 <%if @feedback == 1%>
    <p>Correct!</p>
  <%elsif @feedback == 0 %>
    <h1>You were lazy and skipped the question!</h1>
    <br>
  <%elsif @feedback == nil%>
    <p></p>
  <%else%>
    <p>Incorrect.  The answer was <%=@answer%></p>
  <% end %>

  <h4>Your word is ... </h4>

  <h2> <%= @card.question %> </h2>
  <br>
  <form action="/round/<%= @card.deck_id %>" method="post">
    <input type="text" name="answer">
    <input type="submit" value="Guess">
  </form>
